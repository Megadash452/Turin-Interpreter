{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/cpp/*.cpp",
                "-I",
                "${workspaceFolder}/src/include",
                "-o",
                "${workspaceFolder}/build-linux-g++/${workspaceFolderBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
